    </button>
    <button data-action="edit">
        Edit
    </button>    
    </script>


    <buttton class="add-chore">Add Chore to This Apartment</buttton>

    <script type="text/template" id="new-chore">

    </script>

    <script type="text/template" id="edit-form" class="toggle">
    <BR><BR>
    Task Name:
    <input type="text" id="task_name">
    Assignee:
    <input type="text" id="assignee">
    <button class="update">Update Chore</button>
    </script>

    <script type="text/template" id="new-chore-form">
    <BR><BR>
    <form id="entry-form">
    Add a Chore!
