</head>
<body>
<% if session[:roommate_id] %>
<h1>My Chores</h1>



  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
       <div class="margin-right">
        <div>
          <%=link_to("My Chores", roommate_path(session[:roommate_id]), :class => "profile") %>
          <%=link_to("Edit Profile Info", edit_roommate_path(session[:roommate_id]) :class => "edit-profile-button") %>
          <%=link_to("Log Out", "/sessions", method: :delete) %>
        </div>
      </div> 
    </div>
  </nav>
    <ul id="chore-list">
    </ul>
    <script type="text/template" id="my-chores">
    <li>TaskName: <%%= task_name %> </li>
    <li>Completed: <%%= completed %> </li>
    <li>Assignee: <%%= assignee %> </li>
    <button data-action='destroy'>
